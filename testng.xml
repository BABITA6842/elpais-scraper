<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="BrowserStackSuite"
       parallel="tests"
       thread-count="5"
       verbose="1">

    <!-- XML Reporter for separate logs -->
    <listeners>
        <listener class-name="org.testng.reporters.XMLReporter"/>
    </listeners>

    <!-- Desktop Browsers -->

    <test name="Chrome_Windows">
        <parameter name="browser" value="Chrome"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="11"/>
        <parameter name="deviceName" value=""/>
        <classes>
            <class name="com.assignment.tests.TestSelenium"/>
        </classes>
    </test>

    <test name="Edge_Windows">
        <parameter name="browser" value="Edge"/>
        <parameter name="os" value="Windows"/>
        <parameter name="os_version" value="11"/>
        <parameter name="deviceName" value=""/>
        <classes>
            <class name="com.assignment.tests.TestSelenium"/>
        </classes>
    </test>

    <test name="Chrome_Mac">
        <parameter name="browser" value="Chrome"/>
        <parameter name="os" value="OS X"/>
        <parameter name="os_version" value="Monterey"/>
        <parameter name="deviceName" value=""/>
        <classes>
            <class name="com.assignment.tests.TestSelenium"/>
        </classes>
    </test>

    <test name="Safari_Mac">
        <parameter name="browser" value="Safari"/>
        <parameter name="os" value="OS X"/>
        <parameter name="os_version" value="Monterey"/>
        <parameter name="deviceName" value=""/>
        <classes>
            <class name="com.assignment.tests.TestSelenium"/>
        </classes>
    </test>

    <!-- Mobile Browser -->

    <test name="Chrome_Android">
        <parameter name="browser" value="Chrome"/>
        <parameter name="os" value=""/>
        <parameter name="os_version" value="13.0"/>
        <parameter name="deviceName" value="Google Pixel 7"/>
        <classes>
            <class name="com.assignment.tests.TestSelenium"/>
        </classes>
    </test>

</suite>